package com.oli.game;

import java.util.Random;

import com.badlogic.gdx.utils.Array;

public class TrackGenerator {
	
	Random random;
	
	//faked previous coords
	int LastX = 0;
	int LastY = 350;
	
	int Straight = 0;
	int Up = 1;
	int Down = 2;
	
	public TrackGenerator() {
		
		
		
	}
	
	public Array<int[]> GenerateSingleDebug() {
		
		Array<int[]> Track = new Array<int[]>();
		
		int XPos = 0;
		int[] LastDirectionChange = new int[2];
		LastDirectionChange[0] = 0;
		LastDirectionChange[1] = 350;
		int Direction = Straight;
		
		while (XPos <= 1280) {
			
			System.out.println(XPos);
			
			if (Direction == Straight) {
				
				if (LastDirectionChange[0] >= XPos + 320) {
					
					
					
				} else {
					
					int[] coords = new int[2];
					coords[0] = LastX + 32;
					coords[1] = LastY;
					LastX = coords[0];
					LastY = coords[1];
					XPos = coords[0];
					
					System.out.println(XPos);
					
					Track.add(coords);
					
				}
				
			}
			
		}
		
		return Track;
		
	}

}
