package com.oli.game;

import java.util.Random;
import java.util.Timer;
import java.util.TimerTask;

public class Spawner {
	
	Timer SpawnSpider;
	Random r;
	
	public Spawner(int InitialDelay) {
		
		r = new Random();
		
		SpawnSpider.schedule(new TimerTask() {

			@Override
			public void run() {
				
				int StartingY = r.nextInt(482) + 64;
				int StartingSpeed = 2;
				
				MGame.spiders.add(new Enemy(1300, StartingY, StartingSpeed)));
				
			}
			
		}, InitialDelay, 1000);
		
	}

}
